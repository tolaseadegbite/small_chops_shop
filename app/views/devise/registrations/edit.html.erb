<% provide(:title, "Account Settings") %>

<div class="row">
  <div class="col-md-6 form-col h-100">
    <h4 class="mt-3 ms-5"><%= link_to "Grills by Lashe", root_path, class: "text-dark text-decoration-none" %></h4>
    <div class="d-flex justify-content-center">
      <div class="w-75">
        <%= link_to sanitize("&larr; Back to products"), products_path %>
        <div class="my-3 text-center">
          <h1>Account Settings</h1>
          <p>Edit your account</p>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="my-3 mx-0 w-25">
            <%= image_tag(current_user.avatar, size: "100x100", style: "border-radius: 999px;") if current_user.avatar.attached? %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :email %></strong>
            </div>
            <%= f.email_field :email, autofocus: true, placeholder: "hello@example.com", autocomplete: "email", class: "form-control form-control-lg rounded-0" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :username %></strong>
            </div>
            <%= f.text_field :username, placeholder: "Enter username", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :first_name %></strong>
            </div>
            <%= f.text_field :first_name, placeholder: "Enter your first name", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :surname %></strong>
            </div>
            <%= f.text_field :surname, placeholder: "Enter your surname", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :avatar %></strong>
            </div>
            <%= f.file_field :avatar, placeholder: "Enter your surname", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :phone_number %></strong>
            </div>
            <%= f.text_field :phone_number, placeholder: "Enter your phone number", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :address_line_1 %></strong>
            </div>
            <%= f.text_field :address_line_1, placeholder: "Enter your address", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <strong>Password</strong>
            <div class="mb-1 d-flex space-between">
              <%= f.password_field :password, placeholder: "Leave it blank if you don't want to change (6 characters minimum)", class: "form-control form-control-lg rounded-0 me-2" %>

              <%= f.password_field :password_confirmation, placeholder: "Confirm your password", class: "form-control form-control-lg rounded-0" %>
            </div>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :current_password, 'We need your current password to confirm your changes.' %></strong>
            </div>
            <%= f.password_field :current_password, placeholder: "Enter current password", autocomplete: true, class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="actions mb-2">
            <%= f.button class: "btn btn-dark btn-lg rounded-0 w-100" do %>
              <span class="show-when-enabled">Update account</span>
              <span class="show-when-disabled"><i class="fa-solid fa-spinner fa-spin text-white"></i> Updating account...</span>
            <% end %>
          </div>
        <% end %>

        <h3>Cancel my account</h3>

        <div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger btn-sm" %></div>

        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>

  <div class="col-md-6 signup-img img-col">
    <%= image_tag('https://images.unsplash.com/photo-1556814901-18c866c057da?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Mzh8fGdyaWxsfGVufDB8fDB8fHww', class: "img-fluid", style: "height: 100%") %>
  </div>
</div>
