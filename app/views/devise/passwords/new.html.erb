<div class="row vh-100 overflow-hidden">
  <div class="col-md-6 form-col">
    <h4 class="mt-3 ms-5"><%= link_to "Grills by Lashe", root_path, class: "text-dark text-decoration-none" %></h4>
    <div class="d-flex justify-content-center align-items-center">
      <div class="w-75">
        <div class="my-3 text-center">
          <h2>Password recovery</h2>
          <p>Change your password</p>
        </div>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :email %></strong>
            </div>
            <%= f.email_field :email, autofocus: true, placeholder: "hello@example.com", autocomplete: "email", class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="actions mb-2">
            <%= f.submit "Send me", class: "reset password instructions btn btn-dark btn-lg rounded-0 w-100" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
  </div>

  <div class="col-md-6 signup-img img-col vh-100">
    <%= image_tag('password-page.jpg', class: "img-fluid") %>
  </div>
</div>
