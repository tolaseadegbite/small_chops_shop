<div class="row">
  <div class="col-md-6 form-col">
    <h4 class="mt-3 ms-5"><%= link_to "Grills by Lashe", root_path, class: "text-dark text-decoration-none" %></h4>
    <div class="d-flex justify-content-center align-items-center">
      <div class="w-75">
        <div class="my-3 text-center">
          <h2>Hello Again!</h2>
          <p>Login</p>
        </div>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :email %></strong>
            </div>
            <%= f.email_field :email, autofocus: true, placeholder: "hello@example.com", autocomplete: "email", class: "form-control form-control-lg rounded-0" %>
          </div>

          <div class="mb-3">
            <div class="mb-1">
              <strong><%= f.label :password %></strong>
            </div>
            <%= f.password_field :password, placeholder: "Enter your password", autocomplete: "email", class: "form-control form-control-lg rounded-0" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions my-3">
            <%= f.button "Log in", class: "btn btn-dark btn-lg rounded-0 w-100" do %>
              <span class="show-when-enabled">Log in</span>
              <span class="show-when-disabled"><i class="fa-solid fa-spinner fa-spin text-white"></i> Signing up...</span>
            <% end %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

  <div class="col-md-6 signup-img img-col">
    <%= image_tag('https://images.unsplash.com/photo-1555939594-58d7cb561ad1?w=500&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MjZ8fGdyaWxsfGVufDB8fDB8fHww', class: "img-fluid", style: "height: 100%") %>
  </div>
</div>
