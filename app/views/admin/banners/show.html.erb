<div class="container pt-4 pb-5">

    <div class="top-section d-flex justify-content-between">
        <%= render 'admin/banners/admin_banner_breadcrumb' %>

        <div class="action-buttons mb-4 text-center">
            <%= link_to edit_admin_banner_path(@banner), class: "btn btn-dark btn-sm border rounded-0" do %>
                <i class="fa-regular fa-trash-can"></i>
                Edit
            <% end %>

            <%= link_to admin_banner_path(@banner), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-dark border btn-sm rounded-0" do %>
                <i class="fa-regular fa-pen-to-square"></i> 
                Delete
            <% end %>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-secondary">
                <tr>
                    <th scope="col">Attributes</th>
                    <th scope="col">Values</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
            <tr>
                <td><b>ID</b></td>
                <td><%= @banner.id %></td>
            </tr>
            <tr>
                <td><b>Label</b></td>
                <td><%= @banner.label %></td>
            </tr>
            <tr>
                <td><b>Image</b></td>
                <td><%= image_tag(@banner.image, class: "w-25") %></td>
            </tr>
            <tr>
                <td><b>Created by</b></td>
                <td><%= @banner.user.username %></td>
            </tr>
            <tr>
                <td><b>Date created</b></td>
                <td><%= @banner.created_at.strftime("%m/%d/%Y") %></td>
            </tr>
            <tr>
                <td><b>Last updated</b></td>
                <td><%= @banner.updated_at.strftime("%m/%d/%Y") %></td>
            </tr>
        </table>
    </div>
</div>