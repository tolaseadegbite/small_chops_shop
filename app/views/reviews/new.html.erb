<div class="container my-3">

    <%= link_to sanitize("&larr; back to: #{@product.name}"), @product %>

    <div class="header pt-2">
        <h1>New Review</h1>
        <p class="fs-5"><strong>You are reviewing:</strong> <%= link_to @product.name, @product %></p>
    </div>
    <hr>
    <br>

    <%= turbo_frame_tag @review do %>
        <div class="form">
            <%= render 'form',  product: @product, review: @review %>
        </div>
    <% end %>
</div>